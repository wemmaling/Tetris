
.wrap-content
  width 1000px
  background #b7b7af
  border-radius 50px
  display flex
  justify-content center
  opacity 0.9
  margin auto
  padding 50px
  .cell-content
    position relative
    background black
    border solid #6c7373 10px
    border-radius 30px
    padding 20px
    .game-over-wrapper
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      display flex
      justify-content center
      align-items center

  .right-content
    display flex
    flex-direction column
    justify-content space-around
    .score-content
      margin-left 50px
      margin-bottom 50px
      width 300px
      height 200px
      display flex
      flex-direction column
      align-items center
      font-size 24px
      color white
      background black
      border solid #6c7373 10px
      border-radius 30px
      .score
        display flex
        justify-content center
        align-items center
        width 200px
        height 80px
        background #2a2a2a
        border solid #6c7373 1px
        border-radius 20px

    .next-content
      margin-left 50px
      margin-bottom 20px
      width 300px
      height 400px
      display flex
      flex-direction column
      align-items center
      font-size 24px
      color white
      background black
      border solid #6c7373 10px
      border-radius 30px
