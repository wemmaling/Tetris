.game-over
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 300px
  height 400px
  background black
  border solid #93979f 10px
  border-radius 30px
  font-size 24px
  color white
  .score
    display flex
    justify-content center
    align-items center
    width 150px
    height 50px
    background #2a2a2a
    border solid #6c7373 1px
    border-radius 10px
    margin-bottom 40px