.game-over
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 300px
  height 400px
  background black
  border solid #93979f 10px
  border-radius 30px
  font-size 22px
  color white
  > span
    padding 10px
  .score
    display flex
    justify-content center
    align-items center
    width 150px
    height 50px
    background #2a2a2a
    border solid #6c7373 1px
    border-radius 10px
    margin-bottom 20px
  .highest-score
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    width 250px
    height 100px
    background #black
    border solid #6c7373 1px
    > span
      border-bottom solid #6c7373 1px
    .score-board
      display flex
      justify-content center
      align-items center
      margin 0 5px 0 5px
      width 240px
      border solid #6c7373 1px
      background #00aa00
